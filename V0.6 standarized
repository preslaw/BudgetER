import csv
import os

file = open('Csv')

fileReader = csv.reader(file)
history = list(fileReader)

categories ={"a":"(a)llegro",
             "i":"(i)nne",
             "j":"(j)anek",
             "k":"(k)redyt",
             "m":"(m)ieszkanie",
             "r":"(r)achunki",
             "o":"r(o)zrywka",
             "p":"a(p)teka",
             "s":"(s)amochód",
             "z":"(z)akupy",
             "w":"(w)płata",
             "save":"(save)"
}

def showCategories():
  print("")
