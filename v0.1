import csv
import os

exampleFile = open('Csv')

exampleReader = csv.reader(exampleFile)
hist = list(exampleReader)

def showRecord(curRec):
  print('#',curRec)
  for a in range(len(hist[curRec])):
    print(str(a)+".",hist[curRec][a])

curRec =1
curRecMax = len(hist)-1
print(curRecMax)

showRecord(curRec)

while True:
  a = input('(n)ext, (p)revious')
  os.system('clear')
  if (a =='n'):
    if (curRec<curRecMax):
      curRec+=1;
      showRecord(curRec)
    else:
      curRec=1
      showRecord(curRec)
  if (a =='p'):
    if (curRec>1):
      curRec-=1
      showRecord(curRec)
    else:
      curRec = curRecMax
      showRecord(curRec)
  
  
  
